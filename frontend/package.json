{
	"name": "hillview",
	"version": "0.0.1",
	"devDependencies": {
		"@playwright/test": "^1.54.1",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.17.2",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tauri-apps/cli": "^2.6.2",
		"@testing-library/jest-dom": "^6.6.4",
		"@testing-library/svelte": "^5.2.8",
		"@types/leaflet": "^1.9.19",
		"@vitest/ui": "^3.2.4",
		"@wdio/appium-service": "^9.16.2",
		"@wdio/cli": "^9.16.2",
		"@wdio/local-runner": "^9.16.2",
		"@wdio/mocha-framework": "^9.16.2",
		"@wdio/spec-reporter": "^9.16.2",
		"appium": "^2.19.0",
		"appium-uiautomator2-driver": "^4.2.4",
		"appium-xcuitest-driver": "^9.9.1",
		"happy-dom": "^18.0.1",
		"svelte": "^5.22.6",
		"svelte-check": "^4.1.4",
		"typescript": "^5.7.3",
		"vite": "^6.1.1",
		"vitest": "^3.2.4",
		"webdriverio": "^9.16.2"
	},
	"private": true,
	"scripts": {
		"dev": "vite dev --port ${VITE_DEV_PORT:-8212}",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",

		"test:unit": "vitest",
		"test:unit:ui": "vitest --ui",
		"test:coverage": "vitest --coverage",
		"test:run": "vitest run",

		"android:dev": "./scripts/android/dev.sh",
		"android:debug:init": "./scripts/android/debug-init.sh",
		"android:debug:build": "./scripts/android/debug-build.sh",
		"android:debug:install": "./scripts/android/debug-install.sh",
		"android:release:init": "./scripts/android/release-init.sh",
		"android:release:build": "./scripts/android/release-build.sh", 
		"android:release:install": "./scripts/android/release-install.sh",
		"android:logs": "./scripts/android/logs.sh",

		"test:android": "wdio run wdio.conf.ts",
		"test:android:clean": "WDIO_CLEAN_STATE=true wdio run wdio.conf.ts",
		"test:android:fast": "WDIO_CLEAN_STATE=false wdio run wdio.conf.ts",
		"test:android:test0": "WDIO_CLEAN_STATE=false WDIO_RESTART_PER_SUITE=true wdio run wdio.conf.ts --spec './test/specs/android-photo-simple.test0.ts'",



		"appium": "appium",
		"appium:doctor": "echo 'Use: npx appium driver list --installed to check drivers'",
		"test": "playwright test",
		"test:ui": "playwright test --ui",
		"test:debug": "playwright test --debug",
		"test:headed": "playwright test --headed",
		"validate": "./scripts/validate.sh",
		"validate:quick": "./scripts/validate.sh --skip-android",
		"validate:android": "./scripts/validate-android.sh",
		"build:check": "./scripts/build-check.sh",
		"clean:android": "./scripts/clean-android.sh",
		"setup:hooks": "./scripts/setup-hooks.sh",
		"ci": "bun run validate",
		"precommit": "bun run validate:quick"
	},
	"type": "module",
	"dependencies": {
		"@sentry/sveltekit": "^9",
		"@tauri-apps/api": "^2.7.0",
		"@tauri-apps/plugin-deep-link": "^2.4.1",
		"@tauri-apps/plugin-geolocation": "^2.3.0",
		"@tauri-apps/plugin-os": "^2.3.0",
		"angles": "^0.3.0",
		"dexie": "^4.0.11",
		"leaflet": "^1.9.4",
		"lucide-svelte": "^0.476.0",
		"svelte-leafletjs": "^2.0.0",
		"tauri-plugin-hillview-api": "file:./tauri-plugin-hillview",
		"tsgeo": "^1.2.2"
	}
}
